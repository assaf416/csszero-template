<% content_for :title, "Translations" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Translations</h1>
  <%= link_to "New translation", new_translation_path, class: "btn btn--primary" %>
</div>

<div id="translations" class="flex flex-col" style="gap: 2rem;">
  <% @translations.each do |translation| %>
    <div class="flex flex-col items-start gap">
      <%= render translation %>
      <%= link_to "Show this translation", translation, class: "btn" %>
    </div>
  <% end %>
</div>

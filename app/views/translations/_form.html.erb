<%= form_with(model: translation, html: { contents: true }) do |form| %>
  <% if translation.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(translation.errors.count, "error") %> prohibited this translation from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% translation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :key, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :key, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :hebrew, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :hebrew, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :english, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :english, class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>
